@page
@model InterRazor.Pages.Profesores.EditarModel
@{
     ViewData["Title"] = "Editar profesor";
}

<div class = "card">
    <div class=" = card-header">
      
        <h2 class = "text-info">Lista de Profesores</h2>
    </div>

    <div class = "card-body">
        <form method="post">

            <input type="hidden" asp-for="Profesor.IdProf" />

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="container" style="padding:30px">
                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-2">
                            <label asp-for="Profesor.Nombre"></label>
                        </div>
                        <div class="col-sm-6">
                            <input asp-for="Profesor.Nombre" class="form-control" />
                        </div>
                        <span asp-validation-for="Profesor.Nombre" class="text-danger"></span>
                    </div>
                </div>

               <div class="form-group">
                    <div class="row">
                        <div class="col-sm-2">
                            <label asp-for="Profesor.Apellido"></label>
                        </div>
                        <div class="col-sm-6">
                            <input asp-for="Profesor.Apellido" class="form-control" />
                        </div>
                        <span asp-validation-for="Profesor.Nombre" class="text-danger"></span>
                    </div>
                </div>

             <div class="form-group">
                    <div class="row">
                        <div class="col-sm-2">
                            <label asp-for="Profesor.esp"></label>
                        </div>
                        <div class="col-sm-6">
                            <input asp-for="Profesor.esp" class="form-control" />
                        </div>
                        <span asp-validation-for="Profesor.esp" class="text-danger"></span>
                    </div>
                </div>

            <div class="form-group">
                    <div class="row">
                        <div class="col-sm-2">
                            <label asp-for="Profesor.FechaDeIngreso"></label>
                        </div>
                        <div class="col-sm-6">
                            <input asp-for="Profesor.FechaDeIngreso" class="form-control" />
                        </div>
                        <span asp-validation-for="Profesor.FechaDeIngreso" class="text-danger"></span>
                    </div>
                </div>

            <div class="form-group">
                    <div class="row">
                        <div class="col-sm-2">
                            <label asp-for="Profesor.Fechanac"></label>
                        </div>
                        <div class="col-sm-6">
                            <input asp-for="Profesor.Fechanac" class="form-control" />
                        </div>
                        <span asp-validation-for="Profesor.Fechanac" class="text-danger"></span>
                    </div>
                </div>



             

            <div class="form-group">
                    <div class="row">
                        <div class="col-sm-2">
                            <input type="submit" value="Editar" class="btn btn-primary form-control" />
                        </div>
                        <div class="col-sm-4">   
                            <a asp-page="Index" class="btn btn-success form-control">Regresar a lista</a>
                        </div>                      
                    </div>
                </div>




            </div>
        </form>
    </div>
</div>
